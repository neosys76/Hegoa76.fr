<h1>Account</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Nickname</th>                <td>{{ entity.nickname }}</td>        </tr>
        <tr>
            <th>Firstname</th>                <td>{{ entity.firstname }}</td>        </tr>
        <tr>
            <th>Password</th>                <td>{{ entity.password }}</td>        </tr>
        <tr>
            <th>Email</th>                <td>{{ entity.email }}</td>        </tr>
        <tr>
            <th>Confirmation</th>                <td>{{ entity.confirmation }}</td>        </tr>
        <tr>
            <th>Status</th>                <td>{{ entity.status }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('account') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('account_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('account_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
