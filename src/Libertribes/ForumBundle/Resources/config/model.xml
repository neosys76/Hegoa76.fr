<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Category Repository Service -->
        <service id="libertribes_forum.repository.category" class="Libertribes\ForumBundle\Entity\CategoryRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument type="string">Libertribe\ForumBundle\Entity\Category</argument>
        </service>

        <!-- Topic Repository Service -->
        <service id="libertribes_forum.repository.topic" class="Libertribes\ForumBundle\Model\TopicRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument type="string">Libertribes\ForumBundle\Entity\Topic</argument>
        </service>

        <!-- Post Repository Service -->
        <service id="libertribes_forum.repository.post" class="Libertribes\ForumBundle\Entity\PostRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument type="string">Libertribes\ForumBundle\Entity\Post</argument>
        </service>
    </services>

</container>
